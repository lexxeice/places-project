<% content_for :nav do %>
  <%= link_to t('.root_page_button'), '/',
                                     class: 'form-control btn btn-outline-secondary my-2 my-sm-0 mr-2 ml-2' %>
<% end %>

<% content_for :main do %>
<div class="container col-md-6">
  <h1> <%= t('.sign_in_title') %> </h1>
  <%= form_for(:session, url: login_path) do |f| %>
    <p>
      <%= f.label :email, t('.email') %>
      <%= f.email_field :email, class: 'form-control', autofocus: true %>
    </p>
    <p>
      <%= f.label :password, t('.password') %>
      <%= f.password_field :password, class: 'form-control' %>
    </p>
    <p>
      <%= f.label :remember_me, class: "checkbox inline" do %>
      <%= f.check_box :remember_me %> <%= t('.remember_me')  %>
    </p>
    <% end %>
    <p><%= f.submit t('.sign_in_button'), class: "btn btn-outline-success"%></p>
    <% end %>
  <p> <%= t('.first_time_here') %> <%= link_to t('.sign_up'), signup_path %></p>
</div>
<% end %>
