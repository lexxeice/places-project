<% content_for :nav do %>
  <%= link_to 'Main page'.html_safe, '/',
                                     class: 'form-control btn btn-outline-secondary my-2 my-sm-0 mr-2 ml-2' %>
<% end %>

<% content_for :main do %>
<div class="container col-md-6">
  <h1>Sign In</h1>
  <%= form_for(:session, url: login_path) do |f| %>
    <p>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control', autofocus: true %>
    </p>
    <p>
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
    </p>
    <p>
      <%= f.label :remember_me, class: "checkbox inline" do %>
      <%= f.check_box :remember_me %> Remember me on this computer
    </p>
    <% end %>
    <p><%= f.submit "Sign In", class: "btn btn-outline-success"%></p>
    <% end %>
  <p>New here? <%= link_to "Sign up now!", signup_path %></p>
</div>
<% end %>
