<% content_for :nav do %>
  <%= link_to t('.sign_up'), logged_in? ? user_path(current_user) : signup_path, class: "form-control btn btn-outline-primary my-2 my-sm-0 mr-2 ml-2" %>
  <%= link_to t('.sign_in'), logged_in? ? user_path(current_user) : login_path, class: "form-control btn btn-outline-secondary my-2 my-sm-0 mr-2 ml-2" %>
<% end %>

<% content_for :main do %>
  <h1><%= raw t('.headline') %></h1>
  <p class="lead"><%= t('.mark_and_share') %></p>
  <div id="map"></div>
  <p class="lead"><%= raw t('.start') %></p>
<% end %>
